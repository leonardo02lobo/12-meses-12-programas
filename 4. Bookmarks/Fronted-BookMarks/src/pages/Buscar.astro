---
import Layout from "../layouts/Layout.astro";
---

<Layout Title="Buscar">
    <label for="search" class="flex flex-row justify-start items-center gap-3">
        <div class="flex flex-col gap-3">
            Ingrese Lo que Quiere Buscar
        <input
            type="text"
            name="search"
            id="search"
            class="border-2 border-white rounded-2xl text-white p-2"
            placeholder="Buscar..."
        />
        </div>
        <button id="buscar" class="bg-blue-700 p-3 rounded-2xl text-white cursor-pointer hover:bg-blue-800">Buscar</button>
    </label>
    <div class="grid grid-cols-2 gap-4" id="result">

    </div>
</Layout>

<script src="./../script/js/buscarBookMark.js"></script>
